{
	"name": "@kentcdodds/workshop-app",
	"sourceRoot": "packages/workshop-app",
	"productType": "application",
	"targets": {
		"build": {
			"executor": "nx:run-commands",
			"outputs": ["{options.outputPath}"],
			"options": {
				"commands": [
					"remix build --sourcemap",
					"tsx ./other/build-dir.ts server",
					"tsx ./other/build-dir.ts utils",
					"tsc --build ./utils/tsconfig.json"
				],
				"parallel": true,
				"cwd": "packages/workshop-app",
				"outputPath": "packages/workshop-app/build"
			}
		},
		"dev": {
			"executor": "nx:run-commands",
			"options": {
				"command": "npm run dev"
			}
		}
	}
}
